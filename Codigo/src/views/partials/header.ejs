    <header>
        <div class="mensaje">
            <p>Descuento de un 30% en productos seleccionados</p>
        </div>
        <section class="contenedor">
                <div class="burger-menu">
                    <button><i class="fas fa-bars"></i></button>
                </div> 
                <div class="content-img" >
                    <a href="/"><img src="/img/logo.jpeg" alt="logo-comercio"id="logo"> </a>        
                </div>
                <div class="searchBar"> 
                    <input type="text" id="fname" name="fname" placeholder="Buscar platos">    
