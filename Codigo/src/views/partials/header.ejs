                </div>
                <% if(locals.isLogged) { %> 
                <div class="header-full">
                    <div class="sign-in">
                            <a href="">Hola <%= locals.userLogged.firstName %> ! </a>
                    </div>
                    <div class="location">
                        <i class="fas fa-map-marker-alt"> Ubicacion</i>
                    </div>
                    <div clase="carrito">
                        <a href="/carrito"> <i class="fas fa-shopping-cart"></i></a>
                    </div>
                </div> 
                <% } else { %>
                <div class="header-full">
                    <div class="sign-in">
                        <a href="user/register"><i class="fas fa-sign-in-alt">Registrarse</i> </a>
                    </div>
                    <div class="sign-in">
                            
                            <a href="user/login"><i class="fas fa-user-circle"> Inicio de Sesion</i> </a>
                    </div>
                </div> 

                <% } %>             
        </section> 
        <nav class="navBar">
            <div class="nav1">
                <ul class="enlaces-1" type="none" > 
                    <li><a href="/productos">Todos los Productos </a></li>
                    <li><a href="">Congelados </a></li>
                    <li><a href="">Frescos </a></li>
                    <li><a href="./producto/regionales">Regionales</a></li>
                    <li><a href="">Recetas </a></li>
                </ul>
            </div>
           <div class="nav2">
                <ul type="none" clase="botones-redireccionables">
                    <li><button id="promo">Promos</button> </li>
                    <li><button class="boton-nav2">Combos</button> </li>
                    <li><button class="boton-nav2">Zonas de Envio</button></li>
